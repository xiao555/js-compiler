.entry-content
  ul,ol
    margin 0 0 12px 0
  hr
    display block
    margin 20px 0
  strong
    font-weight 700
  h1,h2,h3,h4,h5,h6
    margin 0 0 12px 0
  img
    max-width 100%
    height auto
  code
    text-shadow none
    background #555
    color #bfbebe
    font-family "Courier New",clearSys
  pre
    text-shadow none
    font-size 12px
    width 95%
    line-height 16px
    overflow auto
    font-family "Courier New",clearSys
    background #fcfcfc
    border-top 1px solid #eee
    border-bottom 1px solid #eee
    border-left 15px solid #eee
    border-right 1px solid #eee
    margin 0 0 12px
    padding 0 5px 16px
  .wp_link_pages
    clear both
    padding 10px 0 20px
  .alignnone
    margin 5px 20px 20px 0
  .aligncenter,div.aligncenter
    display block
    margin 5px auto 20px auto
  .alignright
    float right
    margin 5px 0 20px 20px
  .alignleft
    float left
    margin 5px 20px 20px 0
  .aligncenter
    display block
    margin 5px auto
  img.alignright,a img.alignright
    float right
    margin 5px 0 20px 20px
  img.alignnone,a img.alignnone
    margin 5px 0 20px 0
  img.alignleft,a img.alignleft
    float left
    margin 5px 20px 20px 0
  img.aligncenter,a img.aligncenter
    display block
    margin-left auto
    margin-right auto

  .wp-caption
    color #808080
    border-bottom 1px solid #AEAEAE
    &.alignnone
      margin 5px 0 20px 0
    &.alignleft
      margin 5px 20px 20px 0
    &.alignright
      margin 5px 0 20px 20px
    img
      border 0 none
      height auto
      margin 0
      padding 0
    p.wp-caption-text
      font-size 12px
      line-height 1.5em
      margin 0
      padding 10px  0

  img.wp-smiley
    vertical-align middle

  .gallery
    margin 0 auto 18px
    .gallery-item
      float left
      margin-top 0
      text-align center
      max-width 155px
    img
      border 1px solid #ddd
    .gallery-caption
      font-size 12px
      margin 0 0 12px
    dl
      margin 0
    br + br
      display none

  .attachment-gallery img
    background #fff
    border 1px solid #f0f0f0
    display block
    height auto
    margin 15px auto
    max-width 96%
    padding 5px
    width auto

  .gallery-meta .iso,
  .gallery-meta .camera,
  .gallery-meta .shutter,
  .gallery-meta .aperture,
  .gallery-meta .full-size,
  .gallery-meta .focal-length
    display block

  .video-iframe
    position relative
    margin-bottom 30px
    &:before
      content ""
      width 100%
      padding-top 50%
      display block
    iframe
      position absolute
      top 0
      left 0
      width 100%
      height 100%

//custom
spacer = 40px
.entry-content,.wp-editor
  font-size 19px
  line-height 26px
  @media mq-mobile
    font-size 17px
    line-height 24px
  h1,h2,h3,h4,h5,h6,p,ul,ol,blockquote
    margin-bottom spacer
  p
    /*margin 0
    padding-bottom 15px*/
  ul
    list-style-type none
    li
      padding-left 45px
      &:before
        content ""
        absolute top 3px left
        size 17px
        border 3px solid yellow
        border-radius 50%
  ol
    padding-left 10px
    list-style-type decimal
  li
    position relative
    & + li
      margin-top 50px
  hr
    border 0
    border-top 1px solid #000
  ol ol,ul ol
    list-style-type lower-latin
    margin-top 10px
  blockquote
    background #023164
    padding 75px
    color white
    margin-bottom 125px
    position: relative
    &:after
      content ''
      absolute bottom -218px right 0
      border-top 218px solid #023164
      border-left 80px dashed transparent
    & + *
      padding-right 50px
  blockquote p
    margin-bottom 0
  h3
    font-size 24px
    line-height 36px
    font-weight 700
  em
    border-bottom 5px solid yellow
  @media mq-below-desktop
    font-size 15px
    line-height 23px
    h1,h2,h3,h4,h5,h6,p,ul,ol
      margin-bottom 25px
    blockquote
      margin 0 -40px 80px
      color yellow
      font-size 29px
      line-height 45px
      font-weight 300
      padding 40px
      &:after
        bottom -127px
        border-top 127px solid #023164
        border-left 50px dashed transparent
      & + *
        padding-right 30px
    em
      border-width 3px
    h3
      font-size 29px
      line-height 45px
    ul
      li
        padding-left 30px
        &:before
          size 12px
          border 2px solid yellow
          top 5px