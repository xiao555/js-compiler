.entry-content
  ul,ol
    margin 0 0 12px 0
  hr
    display block
    margin 20px 0
  strong
    font-weight 700
  h1,h2,h3,h4,h5,h6
    margin 0 0 12px 0
  img
    max-width 100%
    height auto
  code
    text-shadow none
    background #555
    color #bfbebe
    font-family "Courier New",clearSys
  pre
    text-shadow none
    font-size 12px
    width 95%
    line-height 16px
    overflow auto
    font-family "Courier New",clearSys
    background #fcfcfc
    border-top 1px solid #eee
    border-bottom 1px solid #eee
    border-left 15px solid #eee
    border-right 1px solid #eee
    margin 0 0 12px
    padding 0 5px 16px
  .wp_link_pages
    clear both
    padding 10px 0 20px
  .alignnone
    margin 5px 20px 20px 0
  .aligncenter,div.aligncenter
    display block
    margin 5px auto 20px auto
  .alignright
    float right
    margin 5px 0 20px 20px
  .alignleft
    float left
    margin 5px 20px 20px 0
  .aligncenter
    display block
    margin 5px auto
  img.alignright,a img.alignright
    float right
    margin 5px 0 20px 20px
  img.alignnone,a img.alignnone
    margin 5px 0 20px 0
  img.alignleft,a img.alignleft
    float left
    margin 5px 20px 20px 0
  img.aligncenter,a img.aligncenter
    display block
    margin-left auto
    margin-right auto

  .wp-caption
    color #808080
    border-bottom 1px solid #AEAEAE
    max-width 100%
    &.alignnone
      margin 5px 0 20px 0
    &.alignleft
      margin 5px 20px 20px 0
    &.alignright
      margin 5px 0 20px 20px
    img
      border 0 none
      height auto
      margin 0
      padding 0
    p.wp-caption-text
      font-size 12px
      line-height 1.5em
      margin 0
      padding 10px  0

  img.wp-smiley
    vertical-align middle

  .gallery
    margin 0 auto 18px
    .gallery-item
      float left
      margin-top 0
      text-align center
      max-width 155px
    img
      border 1px solid #ddd
    .gallery-caption
      font-size 12px
      margin 0 0 12px
    dl
      margin 0
    br + br
      display none

  .attachment-gallery img
    background #fff
    border 1px solid #f0f0f0
    display block
    height auto
    margin 15px auto
    max-width 96%
    padding 5px
    width auto

  .gallery-meta .iso,
  .gallery-meta .camera,
  .gallery-meta .shutter,
  .gallery-meta .aperture,
  .gallery-meta .full-size,
  .gallery-meta .focal-length
    display block

  .video-iframe
    position relative
    margin-bottom 30px
    &:before
      content ""
      width 100%
      padding-top 50%
      display block
    iframe
      position absolute
      top 0
      left 0
      width 100%
      height 100%

