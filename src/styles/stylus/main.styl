.main
  padding 0 20px
  .container
    border 1px solid borderGray
    background-color inputBorderGray
    border-radius 10px
    padding 10px
  .canvas
    height 330px
    margin-top 20px
    background-color #f7f7f7
    padding-left 29px
    position relative
    &:before,&:after
      content "330"
      color #999
      width 30px
      padding-right 3px
      text-align right
      font-size 13px
      absolute bottom left
      border-right 1px solid #ddd
    &:before
      content "0"
      absolute top left
    canvas
      size 100%
      margin-left -1px
      padding-left 1px
      background-color white
  .function
    text-align center
    margin-top 20px
    button
      display inline-block
      verticle-align middle
      padding 4px 12px
      border 1px solid inputBorderGray
      border-radius 5px
      &:hover
        background-color borderGray
        color itemWhite
        transition all .5s ease-out