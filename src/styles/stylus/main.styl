.main
  .container
    border 1px solid borderGray
    background-color inputBorderGray
    border-radius 10px
    padding 10px
  .canvas
    height 330px
    margin-top 20px
    background-color white
    canvas
      size 100%
  .function
    text-align center
    margin-top 20px
    button
      display inline-block
      verticle-align middle
      padding 4px 12px
      border 1px solid inputBorderGray
      border-radius 5px
      &:hover
        background-color borderGray
        color itemWhite
        transition all .5s ease-out